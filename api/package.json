{
  "name": "@bythewise/api",
  "version": "1.0.0",
  "description": "BYTHEWISE SaaS API - Fastify Backend",
  "type": "module",
  "main": "src/server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "test": "node --test tests/**/*.test.js",
    "migrate": "node src/config/migrate.js",
    "cli": "node src/cli.js",
    "db:init": "node -e \"import('./src/config/database.js').then(m => m.initDatabase().then(() => process.exit(0)))\""
  },
  "keywords": ["saas", "fastify", "n8n", "multi-tenant"],
  "author": "BYTHEWISE",
  "license": "MIT",
  "dependencies": {
    "fastify": "^4.25.2",
    "@fastify/jwt": "^7.2.4",
    "@fastify/cors": "^8.5.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/websocket": "^8.3.1",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "bullmq": "^5.1.6",
    "dockerode": "^4.0.2",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6"
  }
}
